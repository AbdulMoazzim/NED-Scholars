model StudentForm {
  id                String   @id @default(cuid())
  full_name         String
  email             String
  phone             String
  why_join          String   @db.VarChar(2048)
  education_level   String
  field_of_study    String
  organization_name String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("student_form")
