model VolenteerForm {
  id                      String                          @id @default(cuid())
  full_name               String
  email                   String
  phone                   String
  date_of_birth           DateTime
  gender                  Gender
  status                  Status
  country                 String
  city                    String
  current_education_level String
  areas_of_interest       Area_of_Interest_For_Volunteers
  skills                  String
  createdAt               DateTime                        @default(now())
  updatedAt               DateTime                        @updatedAt

  @@map("volunteer_form")
}

enum attendence_mode {
  virtual
  physical
}

enum AttendanceMode {
  virtual
  physical
}

enum EventStatus {
  upcoming
  ongoing
  completed
  cancelled
}

model Seminar {
  id          String    @id @default(cuid())
  title       String
  description String    @db.Text
  date        DateTime
  endDate     DateTime?
  location    String // Physical location address

  // Capacity
  maxCapacity      Int?
  virtualCapacity  Int?
  physicalCapacity Int?

  // Images & Links
  images Image[]
  videos Video[] // For post-webinar recording
  // Meta
  status EventStatus @default(upcoming)

  // Relationships
  attendees  AttendeeSeminarForm[]
  presenters PresenterSeminarForm[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
  @@index([status])
  @@map("seminars")
}

model Webinar {
  id          String    @id @default(cuid())
  title       String
  description String    @db.Text
  date        DateTime
  endDate     DateTime?

  // Webinar specific
  meetingLink     String?
  meetingPassword String?
  platform        String? // Zoom, Google Meet, Teams, etc.
  maxParticipants Int?

  // Images & Links
  images Image[]
  videos Video[] // For post-webinar recording

  // Meta
  status EventStatus @default(upcoming)

  // Relationships
  attendees AttendeeWebinarForm[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
  @@index([status])
  @@map("webinars")
}

// ============================================
// ATTENDEE FORMS
// ============================================

model AttendeeSeminarForm {
  id String @id @default(cuid())

  // Basic Info
  full_name String
  email     String
  phone     String

  // Attendance
  attendance_mode AttendanceMode

  // Foreign Key
  seminarId String?
  seminar   Seminar? @relation(fields: [seminarId], references: [id], onDelete: Cascade)

  // Status
  registration_status String @default("waitlist") // confirmed, waitlist, cancelled

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([seminarId])
  @@index([email])
  @@map("attendee_seminar_form")
}

model AttendeeWebinarForm {
  id String @id @default(cuid())

  full_name       String
  email           String
  phone           String
  attendance_mode AttendanceMode @default(virtual)

  // Foreign Key
  webinarId String?
  webinar   Webinar? @relation(fields: [webinarId], references: [id], onDelete: Cascade)

  // Status
  registration_status String @default("confirmed")

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([webinarId])
  @@index([email])
  @@map("attendee_webinar_form")
}

model PresenterSeminarForm {
  id String @id @default(cuid())

  // Basic Info
  full_name String
  email     String
  phone     String
  country   String

  // Professional
  current_designation String
  organization_name   String
  linkedin_profile    String?

  // Presentation Details
  presentation_title String
  presentation_topic String @db.Text
  areas_of_expertise String @db.Text

  // Motivation
  why_present      String  @db.Text
  impact_statement String? @db.Text

  // Foreign Key
  seminarId String?
  seminar   Seminar? @relation(fields: [seminarId], references: [id], onDelete: SetNull)

  // Status
  application_status Status @default(pending)

  // Timestamps
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  reviewed_at    DateTime?
  scheduled_date DateTime?

  @@index([seminarId])
  @@index([email])
  @@index([application_status])
  @@map("presenter_seminar_form")
}
