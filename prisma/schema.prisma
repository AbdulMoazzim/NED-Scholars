generator client {
  provider = "prisma-client-js"
  output   = "../prisma/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  role          String?
  banned        Boolean?  @default(false)
  banReason     String?
  banExpires    DateTime?
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
  @@map("user")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  impersonatedBy String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

// Team Members Model
model TeamMember {
  id           String       @id @default(cuid())
  slug         String       @unique @db.VarChar(255)
  name         String       @db.VarChar(2048)
  position     String       @db.VarChar(2048)
  email        String       @unique @db.VarChar(255)
  phone        String?      @db.VarChar(50)
  bio          String       @db.VarChar(2048)
  expertise    String?      @db.VarChar(2048)
  achievements String?      @db.VarChar(2048)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  images       Image[]
  videos       Video[]
  youtubeUrls  YoutubeUrl[]

  @@map("team_members")
}

// Success Stories Model
model SuccessStory {
  id              String       @id @default(cuid())
  slug            String       @unique @db.VarChar(255)
  studentName     String       @db.VarChar(2048)
  year            Int
  currentPosition String?      @db.VarChar(2048)
  company         String?      @db.VarChar(2048)
  story           String       @db.VarChar(2048)
  impact          String?      @db.VarChar(2048)
  advice          String?      @db.VarChar(2048)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  images          Image[]
  videos          Video[]
  youtubeUrls     YoutubeUrl[]

  @@map("success_stories")
}

// Blog Posts Model
model BlogPost {
  id          String       @id @default(cuid())
  slug        String       @unique @db.VarChar(255)
  title       String       @db.VarChar(2048)
  excerpt     String       @db.VarChar(2048)
  content     String       @db.VarChar(2048)
  author      String       @db.VarChar(2048)
  category    BlogCategory
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  images      Image[]
  videos      Video[]
  youtubeUrls YoutubeUrl[]

  @@map("blog_posts")
}

// News Updates Model
model NewsUpdate {
  id          String       @id @default(cuid())
  slug        String       @unique @db.VarChar(255)
  headline    String       @db.VarChar(2048)
  summary     String       @db.VarChar(2048)
  content     String       @db.VarChar(2048)
  location    String?      @db.VarChar(2048)
  eventDate   DateTime?
  priority    NewsPriority
  category    NewsCategory
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  images      Image[]
  videos      Video[]
  youtubeUrls YoutubeUrl[]

  @@map("news_updates")
}

// Images Model
model Image {
  id        String   @id @default(cuid())
  url       String   @db.VarChar(2048)
  public_id String
  alt       String?  @db.VarChar(512)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys
  blogPostId String?
  blogPost   BlogPost? @relation(fields: [blogPostId], references: [id], onDelete: Cascade)

  teamMemberId String?
  teamMember   TeamMember? @relation(fields: [teamMemberId], references: [id], onDelete: Cascade)

  newsUpdateId String?
  newsUpdate   NewsUpdate? @relation(fields: [newsUpdateId], references: [id], onDelete: Cascade)

  successStoryId String?
  successStory   SuccessStory? @relation(fields: [successStoryId], references: [id], onDelete: Cascade)
  seminarId      String?
  seminar        Seminar?      @relation(fields: [seminarId], references: [id], onDelete: Cascade)
  webinarId      String?
  webinar        Webinar?      @relation(fields: [webinarId], references: [id], onDelete: Cascade)

  remembranceId String?
  remembrance   Remembrance? @relation(fields: [remembranceId], references: [id], onDelete: Cascade)

  industrialVisitId String?
  industrialVisit   IndustrialVisit? @relation(fields: [industrialVisitId], references: [id], onDelete: Cascade)
  gupshupId String  @unique
  gupshup   GupShupSession @relation(fields: [gupshupId], references: [id], onDelete: Cascade)

  @@map("images")
}

// Videos Model
model Video {
  id        String   @id @default(cuid())
  url       String   @db.VarChar(2048)
  public_id String
  title     String?  @db.VarChar(512)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys
  blogPostId String?
  blogPost   BlogPost? @relation(fields: [blogPostId], references: [id], onDelete: Cascade)

  teamMemberId String?
  teamMember   TeamMember? @relation(fields: [teamMemberId], references: [id], onDelete: Cascade)

  newsUpdateId String?
  newsUpdate   NewsUpdate? @relation(fields: [newsUpdateId], references: [id], onDelete: Cascade)

  successStoryId String?
  successStory   SuccessStory? @relation(fields: [successStoryId], references: [id], onDelete: Cascade)

  seminarId         String?
  seminar           Seminar?         @relation(fields: [seminarId], references: [id], onDelete: Cascade)
  webinarId         String?
  webinar           Webinar?         @relation(fields: [webinarId], references: [id], onDelete: Cascade)
  industrialVisitId String?
  industrialVisit   IndustrialVisit? @relation(fields: [industrialVisitId], references: [id], onDelete: Cascade)

  @@map("videos")
}

// YouTube URLs Model
model YoutubeUrl {
  id        String   @id @default(cuid())
  url       String   @db.VarChar(2048)
  title     String?  @db.VarChar(512)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys
  blogPostId String?
  blogPost   BlogPost? @relation(fields: [blogPostId], references: [id], onDelete: Cascade)

  teamMemberId String?
  teamMember   TeamMember? @relation(fields: [teamMemberId], references: [id], onDelete: Cascade)

  newsUpdateId String?
  newsUpdate   NewsUpdate? @relation(fields: [newsUpdateId], references: [id], onDelete: Cascade)

  successStoryId String?
  successStory   SuccessStory? @relation(fields: [successStoryId], references: [id], onDelete: Cascade)

  @@map("youtube_urls")
}

model Remembrance {
  id          String  @id @default(cuid())
  name        String
  description String
  images      Image[]
}

// Enums for Blog Categories
enum BlogCategory {
  TECHNOLOGY
  EDUCATION
  RESEARCH
  INNOVATION
  STUDENT_LIFE

  @@map("blog_category")
}

// Enums for News Priority
enum NewsPriority {
  LOW
  MEDIUM
  HIGH
  URGENT

  @@map("news_priority")
}

// Enums for News Categories
enum NewsCategory {
  ANNOUNCEMENT
  EVENT
  ACHIEVEMENT
  RESEARCH
  PARTNERSHIP

  @@map("news_category")
}

model Resources {
  id        String   @id @default(cuid())
  url       String   @db.VarChar(2048)
  public_id String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Existing relations
  scholarshipResourceId String?
  scholarshipResource   ScholarshipForm? @relation(fields: [scholarshipResourceId], references: [id], onDelete: Cascade)

  transparencyResourceId String?
  transparencyResource   Transparency? @relation(fields: [transparencyResourceId], references: [id], onDelete: Cascade)

  // Internship application files
  resumeId String          @unique
  resume   InternshipApplication @relation(fields: [resumeId], references: [id],onDelete: Cascade)

  @@map("resources")
}

model Transparency {
  id        String      @id @default(cuid())
  year      String      @db.VarChar(2048)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  files     Resources[]

  @@map("transparency")
}

model PartnerForm {
  id                 String   @id @default(cuid())
  full_name          String
  email              String
  phone              String
  why_join           String   @db.VarChar(2048)
  organization_name  String
  designation        String
  linkedin_profile   String?
  status             String
  areas_of_expertise String
  education_level    String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("partners")
}

model ScholarshipForm {
  id                       String      @id @default(cuid())
  full_name                String
  email                    String
  phone                    String
  date_of_birth            DateTime
  gender                   String
  status                   String
  country                  String
  city                     String
  address                  String?
  current_education_level  String
  institution_name         String
  field_of_study           String
  gpa_or_percentage        String
  expected_graduation_year Int?
  annual_family_income     String
  why_deserve_scholarship  String      @db.VarChar(2048)
  future_goals             String      @db.VarChar(2048)
  resources                Resources[]
  createdAt                DateTime    @default(now())
  updatedAt                DateTime    @updatedAt

  @@map("schoilarship_form")
}

model StudentForm {
  id                String   @id @default(cuid())
  full_name         String
  email             String
  phone             String
  why_join          String   @db.VarChar(2048)
  education_level   String
  status            String
  field_of_study    String
  organization_name String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("students")
}

model MentorForm {
  id                 String   @id @default(cuid())
  full_name          String
  email              String
  phone              String
  why_join           String   @db.VarChar(2048)
  designation        String
  linkedin_profile   String?
  status             String
  field_of_study     String
  experience_years   Int
  areas_of_expertise String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("mentors")
}

model VolenteerForm {
  id                      String   @id @default(cuid())
  full_name               String
  email                   String
  phone                   String
  date_of_birth           DateTime
  gender                  String
  status                  String
  country                 String
  city                    String
  current_education_level String
  areas_of_interest       String
  skills                  String
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@map("volunteers")
}

model Seminar {
  id          String    @id @default(cuid())
  title       String
  description String    @db.Text
  date        DateTime
  endDate     DateTime?
  location    String // Physical location address

  // Capacity
  maxCapacity      Int?
  virtualCapacity  Int?
  physicalCapacity Int?

  // Images & Links
  images Image[]
  videos Video[] // For post-webinar recording
  // Meta
  status String  @default("upcoming")

  // Relationships
  attendees  AttendeeSeminarForm[]
  presenters PresenterSeminarForm[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
  @@index([status])
  @@map("seminars")
}

model Webinar {
  id          String    @id @default(cuid())
  title       String
  description String    @db.Text
  date        DateTime
  endDate     DateTime?

  // Webinar specific
  meetingLink     String?
  meetingPassword String?
  platform        String? // Zoom, Google Meet, Teams, etc.
  maxParticipants Int?

  // Images & Links
  images Image[]
  videos Video[] // For post-webinar recording

  // Meta
  status String @default("upcoming")

  // Relationships
  attendees AttendeeWebinarForm[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
  @@index([status])
  @@map("webinars")
}

// ============================================
// ATTENDEE FORMS
// ============================================

model AttendeeSeminarForm {
  id String @id @default(cuid())

  // Basic Info
  full_name String
  email     String
  phone     String

  // Attendance
  attendance_mode String

  // Foreign Key
  seminarId String?
  seminar   Seminar? @relation(fields: [seminarId], references: [id], onDelete: Cascade)

  // Status
  registration_status String @default("waitlist") // confirmed, waitlist, cancelled

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([seminarId])
  @@index([email])
  @@map("attendee_seminar")
}

model AttendeeWebinarForm {
  id String @id @default(cuid())

  full_name       String
  email           String
  phone           String
  attendance_mode String @default("virtual")

  // Foreign Key
  webinarId String?
  webinar   Webinar? @relation(fields: [webinarId], references: [id], onDelete: Cascade)

  // Status
  registration_status String @default("confirmed")

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([webinarId])
  @@index([email])
  @@map("attendee_webinar")
}

model PresenterSeminarForm {
  id String @id @default(cuid())

  // Basic Info
  full_name String
  email     String
  phone     String
  country   String

  // Professional
  current_designation String
  organization_name   String
  linkedin_profile    String?

  // Presentation Details
  presentation_title String
  presentation_topic String @db.Text
  areas_of_expertise String @db.Text

  // Motivation
  why_present      String  @db.Text
  impact_statement String? @db.Text

  // Foreign Key
  seminarId String?
  seminar   Seminar? @relation(fields: [seminarId], references: [id], onDelete: SetNull)

  // Status
  application_status String @default("pending")

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([seminarId])
  @@index([email])
  @@index([application_status])
  @@map("presenter_seminar")
}

model IndustrialVisit {
  id String @id @default(cuid())

  // Visit Information
  title    String
  company  String
  industry String
  location String

  // Visit Details
  description String  @db.Text
  objectives  String  @db.Text
  agenda      String? @db.Text

  // Schedule
  visitDate DateTime
  startTime DateTime
  endTime   DateTime?
  duration  String?

  // Capacity Management
  maxParticipants     Int
  currentParticipants Int @default(0)

  // Organizer Information
  organizerName    String?
  organizerContact String?
  companyContact   String?
  companyEmail     String?

  // Requirements
  safetyGuidelines     String?   @db.Text
  registrationDeadline DateTime?
  // Transportation
  transportProvided    Boolean   @default(false)
  meetingPoint         String?

  // Media
  images Image[]
  videos Video[]

  // Status Management
  status String @default("upcoming")

  // SEO
  slug String @unique @db.VarChar(255)

  // Relationships
  registrations VisitRegistration[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([industry])
  @@index([visitDate])
  @@index([slug])
  @@map("industrial_visits")
}

model VisitRegistration {
  id       String  @id @default(cuid())
  userId   String
  // Student Personal Information
  fullName String
  email    String
  phone    String
  cnic     String?

  // Academic Information
  university String
  department String
  semester   String
  rollNumber String?

  // Emergency Contact (REQUIRED)
  emergencyContact String
  emergencyPhone   String

  // Foreign Key
  visitId String
  visit   IndustrialVisit @relation(fields: [visitId], references: [id], onDelete: Cascade)

  // Registration Management
  registrationStatus String @default("registered")

  // Feedback & Rating
  rating       Int?
  feedback     String?   @db.Text
  feedbackDate DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, visitId])
  @@index([visitId])
  @@index([email])
  @@index([registrationStatus])
  @@map("visit_registrations")
}

model Internship {
  id                  String                  @id @default(cuid())
  title               String
  company             String
  location            String
  locationType        String                  @default("onsite")
  description         String                  @db.Text
  responsibilities    String                  @db.Text
  requirements        String                  @db.Text
  category            String
  duration            String
  startDate           DateTime?
  endDate             DateTime?
  applicationDeadline DateTime?
  applicationUrl      String?
  contactEmail        String?
  contactPhone        String?
  isPaid              Boolean                 @default(false)
  stipend             String?
  skills              String[]
  benefits            String?                 @db.Text
  numberOfPositions   Int?                    @default(1)
  status              String                  @default("active")
  featured            Boolean                 @default(false)
  slug                String                  @unique
  applications        InternshipApplication[]
  createdAt           DateTime                @default(now())
  updatedAt           DateTime                @updatedAt

  @@index([slug])
  @@index([applicationDeadline])
}

model InternshipApplication {
  id                 String  @id @default(cuid())
  fullName           String
  email              String
  phone              String
  cnic               String?
  university         String
  department         String
  semester           String
  cgpa               String
  expectedGraduation String

  // Resume
  resume Resources? 

  // Cover letter
  coverLetter String?

  linkedIn           String?
  portfolio          String?
  skills             String[]
  previousExperience String?  @db.Text
  applicationStatus  String   @default("submitted")
  notes              String?  @db.Text

  internship   Internship @relation(fields: [internshipId], references: [id], onDelete: Cascade)
  internshipId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([internshipId])
  @@index([email])
  @@index([applicationStatus])
}

model GupShupSession {
  id                   String                    @id @default(cuid())
  title                String
  slug                 String                    @unique
  description          String                    @db.Text
  
  // Speaker/Guest Information
  speakerName          String
  speakerBio           String?                   @db.Text
  speakerEmail         String?
  category             String
  
  // Session Details
  date                 DateTime
  startTime            String                    // e.g., "7:00 PM"
  duration             String                    // e.g., "60 minutes"
  platform             String?                   // e.g., "Zoom", "Google Meet"
  meetingLink          String?
  meetingPassword      String?
  
  // Topics & Format
  mainTopic            String                    @db.Text
  discussionPoints     String?                   @db.Text
  expectedOutcome      String?                   @db.Text
  
  // Media
  thumbnailImage       Image?
  youtubeUrl           String?                   // For recorded sessions
  
  // Capacity & Registration
  maxAttendees         Int?                      @default(100)
  requiresRegistration Boolean                   @default(true)
  registrationDeadline DateTime?
  
  // Status & Visibility
  status               String             @default("upcoming")
  featured             Boolean                   @default(false)
  isPublic             Boolean                   @default(true)
  
  // Relations
  registrations        GupShupRegistration[]
  
  // Timestamps
  createdAt            DateTime                  @default(now())
  updatedAt            DateTime                  @updatedAt
  
  @@index([slug])
  @@index([featured])
}

model GupShupRegistration {
  id                   String                    @id @default(cuid())
  userId String
  
  // Attendee Information
  fullName             String
  email                String
  phone                String?
  
  // Additional Info
  organization         String?                   // University, Company, etc.
  designation          String?                   // Student, Professional, etc.
  
  // Interest & Questions
  whyAttending         String?                   @db.Text
  questionsForSpeaker  String?                   @db.Text
  
  // Registration Status
  registrationStatus   String       @default("confirmed")
  attended             Boolean                   @default(false)
  
  // Feedback (Post-session)
  rating               Int?                      // 1-5 stars
  feedback             String?                   @db.Text
  feedbackDate         DateTime?
  
  // Relations
  session              GupShupSession            @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId            String
  
  // Timestamps
  createdAt            DateTime                  @default(now())
  updatedAt            DateTime                  @updatedAt
  
  @@index([sessionId])
  @@index([email])
  @@unique([email, sessionId]) // Prevent duplicate registrations
}


model Course {
  id                String   @id @default(cuid())
  title             String
  instructor        String
  instructorTitle   String?
  instructorBio     String?  @db.Text
  overview          String   @db.Text
  description       String   @db.Text
  learningOutcomes  String   @db.Text
  category          String
  level             String @default("beginner")
  thumbnailUrl      String?
  youtubeUrl        String?
  videoUrl          String?
  duration          String?
  targetAudience    String   @db.Text
  prerequisites     String?  @db.Text
  syllabus          String?  @db.Text
  modules           Int?
  lessons           Int?
  isFree            Boolean  @default(true)
  price             Float?
  currency          String?  @default("USD")
  status            String @default("active")
  featured          Boolean  @default(false)
  rating            Float?
  enrollmentCount   Int      @default(0)
  slug              String   @unique
  tags              String[]
  
  enrollments       CourseEnrollment[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([category])
  @@index([level])
  @@index([status])
  @@index([featured])
  @@index([slug])
}

model CourseEnrollment {
  id                String   @id @default(cuid())
  userId String
  fullName          String
  email             String
  phone             String?
  currentStatus     String
  organization      String?
  department        String?
  
  courseId          String
  course            Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  status            String @default("enrolled")
  enrollmentDate    DateTime @default(now())
  
  rating            Float?
  review            String?  @db.Text
  reviewDate        DateTime?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([email, courseId])
  @@index([courseId])
  @@index([email])
  @@index([status])
}